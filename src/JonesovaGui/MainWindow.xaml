<Window x:Class="JonesovaGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JonesovaGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <StackPanel Orientation="Vertical">
        <DockPanel>
            <Label Margin="0,0,6,0" DockPanel.Dock="Left" FontWeight="Bold">Přihlášení</Label>
            <Label x:Name="loginStatus" DockPanel.Dock="Left">Načítání...</Label>
            <TextBox x:Name="tokenBox" VerticalAlignment="Center" Margin="12,0" Visibility="Collapsed"></TextBox>
        </DockPanel>
    </StackPanel>
</Window>
